{% extends 'UnetworkAppBundle::layout.html.twig' %}

{% block body %}

  	<div class="header">
		  		<div class="bottomBar">
		  			<div class="row">
		  				<div class="col-md-2"></div>
		  				<div class="col-md-3">
		  					<span class="username">{{ user.prenom }} {{ user.nom }}</span>
		  				</div>

		  				<div class="col-md-2">
		  					<div class="imgProfil">
		  						<img src="/{{ user.getWebPath }}" />
		  						{{ user.community.name }}
		  					</div>
		  				</div>

		  				<div class="col-md-5"></div>
		  			</div>
		  				
		  		</div>
	</div>

		  		<div class="info">

		  			<div class="row">
		  				<div class="col-md-1"></div>

		  				<div class="col-md-6">
		  					<h2>Pr√©sentation</h2>
		  				</div>

		  				<div class="col-md-5">
		  					{{ user.linkedin }}
		  					{{ user.viadeo }}
		  					{{ user.twitter }}
		  					{{ cvs.presentation }}
		  				</div>
		  			</div>

		  			<div class="row">
		  				<div class="col-md-1"></div>

		  				<div class="col-md-6">
		  					<p>Lorem ipsum blablabla</p>
		  				</div>

		  				<div class="col-md-5">
		  					{{ user.ville }}
		  					<br/>
		  					{{ user.email }}
		  					<br />
		  					{{ user.url }}
		  				</div>
		  			</div>

  	<div class="contTimeline">

  		<div class="row">

  			<div class="col-md-12">

		  		{% for experience in experiences %}
		  			<ul class="timeline">
		  				<li class="timeline-blue">
		  					<div class="timeline-time">
		  						<span style="display:inline-block">
		  						<span class="date"> {{ experience.begin|localizeddate('none', 'none', 'fr_FR', null, 'MMMM') }} </span>
								<span class="time"> {{ experience.begin|localizeddate('none', 'none', 'fr_FR', null, 'y') }} </span>
								</span>
								-
								<span style="display:inline-block">
								<span class="date"> {{ experience.end|localizeddate('none', 'none', 'fr_FR', null, 'MMMM') }} </span>
								<span class="time"> {{ experience.end|localizeddate('none', 'none', 'fr_FR', null, 'y') }} </span>
								</span>
		  					</div>
							<div class="timeline-icon">
								<i class="fa fa-trophy"></i>
							</div>
							<div class="timeline-body">
								{{ experience.name }}
								<br />
								{{ experience.description }}
							</div>
						</li>
		  			</ul>
				{% endfor %}

			</div>

		</div>

  	</div>

{% endblock %}

