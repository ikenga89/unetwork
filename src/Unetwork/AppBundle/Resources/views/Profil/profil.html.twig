{% extends 'UnetworkAppBundle::layout.html.twig' %}

{% block body %}

  	<div class="header">
  	<div class="couverture" style="background-image:url('/{{ user.getWebPathCouv }}');"> </div>
		  		<div class="bottomBar">

		  			<div class="row bottomBandeau">

		  				<div class="col-md-2"></div>

		  				<div class="col-md-3">
		  					<span class="username">{{ user.prenom }} {{ user.nom }}</span>
		  				</div>

		  				<div class="col-md-2">
		  					<div class="imgProfil">
		  						<img src="/{{ user.getWebPath }}" />
		  						<span>{% if user.cv.jobname is defined %}{{ user.cv.jobname }}{% endif %}</span>
		  					</div>
		  				</div>

		  				<div class="col-md-5"></div>

		  			</div>
		  				
		  		</div>
	</div>




		  		<div class="info">

		  			<div class="row">

		  				<div class="col-md-1"></div>

		  				<div class="col-md-6">
		  					<p class="presentationTxt">{% if user.cv.presentation is defined %}{{ user.cv.presentation }}{% endif %}</p>
		  				</div>

		  				<div class="col-md-5">

		  					<div class="social_links">

			  					<a href="{{ user.linkedin }}">
			  						<i class="fa fa-linkedin-square fa-2x"></i>
			  					</a>
			  					<a href="{{ user.viadeo }}">
			  						<i class="fa fa-vimeo-square fa-2x"></i>
			  					</a>
			  					<a href="{{ user.twitter }}">
			  						<i class="fa fa-twitter-square fa-2x"></i>
			  					</a>

			  				</div>

			  				<div class="info_links">

			  					<p>
			  						<i class="fa fa-map-marker"></i>
			  						{{ user.ville }}
			  					</p>
			  					
			  					<a href="mailto:{{ user.email }}">
			  						<i class="fa fa-envelope"></i>
			  						{{ user.email }}
			  					</a>
			  					<br />
			  					<a href="{{ user.url }}">
			  						<i class="fa fa-link"></i>
			  						{{ user.url }}
			  					</a>

			  				</div>

		  				</div>

		  			</div>


		  		</div>

  	<div class="contTimeline">

  		<div class="row">

  			<div class="col-md-12">

  				<ul class="timeline">

		  		{% for experience in experiences %}
		  			
		  				<li class="timeline-blue">
		  					<div class="timeline-time">
		  						<span class="date"> {{ experience.begin|localizeddate('none', 'none', 'en', null, 'MMMM') }} </span> <!-- en -> fr_FR -->
								<span class="time"> {{ experience.begin|localizeddate('none', 'none', 'en', null, 'y') }} </span>

								<span class="date"> {{ experience.end|localizeddate('none', 'none', 'en', null, 'MMMM') }} </span>
								<span class="time"> {{ experience.end|localizeddate('none', 'none', 'en', null, 'y') }} </span>
		  					</div>
							<div class="timeline-icon">
								<i class="{{ experience.type.libelle }}"></i>
							</div>
							<div class="timeline-body">
								<h2>{{ experience.name }}</h2>
								<p>{{ experience.description }}</p>
							</div>
						</li>
		  			
				{% endfor %}

				</ul>

			</div>

		</div>

  	</div>

  	<div class="footer">
  		<div class="row">
  			<div class="col-md-5">
  				<div class="bloc">
  					<h2>Ma communauté</h2>
  					<div class="ssbloc">
	  					<div class="community">
		  					<span class="alias">{{user.community.alias}}</span>
		  					<span class="name">
		  						{{ user.community.name }}
		  					</span>
	  					</div>
	  				</div>
  				</div>
  			</div>
  			<div class="col-md-4">
  				<div class="bloc">
  					<h2>Mes compétences</h2>
  					<div class="ssbloc">
	  					{% if user.cv.competence is defined %}
	  						{% for competence in user.cv.competence %} 
		  					<div class="competence">
			  					<span class="name">
			  						{{ competence.name }}
			  					</span>
			  					<div class="noteGlobale">
		  						{% for i in 1..5 %}
		  							<span class="note {% if i <= competence.note %} active {% endif %}"></span>
		  						{% endfor %}
		  						</div>
		  					</div>
		  					{% endfor %}
		  				{% endif %}
	  				</div>
  				</div>
  			</div>
  			<div class="col-md-3">
  				<div class="bloc">
  					<h2>Mes Hobbies</h2>
  					{% if user.cv.hobby is defined %}
	  					{% for hobby in user.cv.hobby %} 
						<div class="hobby">
		  					<span class="name">
		  						{{ hobby.name }}
		  					</span>
	  					</div>
	  					{% endfor %}
	  				{% endif %}
	  			</div>
  			</div>
  		</div>
  	</div>

{% endblock %}

