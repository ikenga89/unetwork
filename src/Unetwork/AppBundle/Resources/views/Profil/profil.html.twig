{% extends 'UnetworkAppBundle::layout.html.twig' %}

{% block body %}

  	<div class="header">

		  		<div class="bottomBar">

		  			<div class="row bottomBandeau">


		  			<div class="row">

		  				<div class="col-md-2"></div>

		  				<div class="col-md-3">
		  					<span class="username">{{ user.prenom }} {{ user.nom }}</span>
		  				</div>

		  				<div class="col-md-2">
		  					<div class="imgProfil">
		  						<img src="/{{ user.getWebPath }}" />
		  						{{ user.community.name }}
		  					</div>
		  				</div>

		  				<div class="col-md-5"></div>

		  			</div>
		  				
		  		</div>
	</div>

		  		<div class="info">

		  			<div class="row">

		  				<div class="col-md-1"></div>

		  				<div class="col-md-6">
		  					<h2>Pr√©sentation</h2>
		  				</div>

		  				<div class="col-md-5">

		  					<div class="social_links">

			  					<a href="{{ user.linkedin }}">
			  						<i class="fa fa-linkedin-square fa-2x"></i>
			  					</a>
			  					<a href="{{ user.viadeo }}">
			  						<i class="fa fa-vimeo-square fa-2x"></i>
			  					</a>
			  					<a href="{{ user.twitter }}">
			  						<i class="fa fa-twitter-square fa-2x"></i>
			  					</a>

			  				</div>

		  				</div>

		  			</div>

		  			<div class="row">

		  				<div class="col-md-1"></div>

		  				<div class="col-md-6">
		  					<p>{{ user.cv.presentation }}</p>
		  				</div>

		  				<div class="col-md-5">

		  					<div class="info_links">

			  					<a href="{{ user.ville }}">
			  						<i class="fa fa-map-marker"></i>
			  						{{ user.ville }}
			  					</a>
			  					<br/>
			  					<a href="{{ user.email }}">
			  						<i class="fa fa-envelope"></i>
			  						{{ user.email }}
			  					</a>
			  					<br />
			  					<a href="{{ user.url }}">
			  						<i class="fa fa-link"></i>
			  						{{ user.url }}
			  					</a>

			  				</div>

		  				</div>

		  			</div>

  	<div class="contTimeline">

  		<div class="row">

  			<div class="col-md-12">

  				<ul class="timeline">

		  		{% for experience in experiences %}
		  			
		  				<li class="timeline-blue">
		  					<div class="timeline-time">
		  						<span class="date"> {{ experience.begin|localizeddate('none', 'none', 'fr_FR', null, 'MMMM') }} </span>
								<span class="time"> {{ experience.begin|localizeddate('none', 'none', 'fr_FR', null, 'y') }} </span>

								<span class="date"> {{ experience.end|localizeddate('none', 'none', 'fr_FR', null, 'MMMM') }} </span>
								<span class="time"> {{ experience.end|localizeddate('none', 'none', 'fr_FR', null, 'y') }} </span>
		  					</div>
							<div class="timeline-icon">
								<i class="{{ experience.type.libelle }}"></i>
							</div>
							<div class="timeline-body">
								<h2>{{ experience.name }}</h2>
								<p>{{ experience.description }}</p>
							</div>
						</li>
		  			
				{% endfor %}

				</ul>

			</div>

		</div>

  	</div>

{% endblock %}

