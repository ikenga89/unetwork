{% extends 'UnetworkAppBundle:Parameter:layout.html.twig' %}

{% block body %}

<h1>Modifier profil</h1>

	{{ form_start(form, { 'attr': { 'role': 'form' }}) }}
	    {{ form_errors(form) }}

		<div class="form-group">
	    {{ form_label(form.nom) }}
	    {{ form_widget(form.nom) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.prenom) }}
	    {{ form_widget(form.prenom) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.ville) }}
	    {{ form_widget(form.ville) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.tel) }}
	    {{ form_widget(form.tel) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.date_nais) }}
	    {{ form_widget(form.date_nais, { 'attr': {'class': 'datepicker'} }) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.linkedin) }}
	    {{ form_widget(form.linkedin) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.viadeo) }}
	    {{ form_widget(form.viadeo) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.twitter) }}
	    {{ form_widget(form.twitter) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.url) }}
	    {{ form_widget(form.url) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.file) }}
	    {{ form_widget(form.file) }}
	    </div>

	    <div class="form-group">
	    {{ form_label(form.file_couv) }}
	    {{ form_widget(form.file_couv) }}
	    </div>

	    <input type="submit" class="btn btn-default" />

	{{ form_end(form) }}

	<script>
        $(document).ready(function(){
            $( ".datepicker" ).datepicker({
            	showOn: "button",
				buttonImage: "../../../../../jquery-ui-1.10.4/development-bundle/demos/datepicker/images/calendar.gif",
				buttonImageOnly: true,
			});
        });
    </script>

{% endblock %}