{% extends 'UnetworkAppBundle:Parameter:layout.html.twig' %}

{% block body %}

<h1>Modifier profil</h1>
	<div class="contentForm">

	{{ form_start(form, { 'attr': { 'role': 'form' }}) }}
	    {{ form_errors(form) }}


	    <table>
	    	<tbody>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.nom) }}</td>
	    			<td>{{ form_widget(form.nom) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.prenom) }}</td>
	    			<td>{{ form_widget(form.prenom) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.ville) }}</td>
	    			<td>{{ form_widget(form.ville) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.tel) }}</td>
	    			<td>{{ form_widget(form.tel) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.date_nais) }}</td>
	    			<td>{{ form_widget(form.date_nais, { 'attr': {'class': 'datepicker'} }) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.linkedin) }}</td>
	    			<td>{{ form_widget(form.linkedin) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.viadeo) }}</td>
	    			<td>{{ form_widget(form.viadeo) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.twitter) }}</td>
	    			<td>{{ form_widget(form.twitter) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.url) }}</td>
	    			<td>{{ form_widget(form.url) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.file) }}</td>
	    			<td>{{ form_widget(form.file) }}</td>
	    		</tr>
	    		<tr class="form-group">
	    			<td>{{ form_label(form.file_couv) }}</td>
	    			<td>{{ form_widget(form.file_couv) }}</td>
	    		</tr>

	    		<tr class="form-group">
	    			<td><input type="submit" class="btn btn-default" /></td>
	    			<td></td>
	    		</tr>
	    	</tbody>
	    </table>
	    
	{{ form_end(form) }}

	</div>


	<script>
        $(document).ready(function(){
            $( ".datepicker" ).datepicker({
            	showOn: "button",
				buttonImage: "../../../../../jquery-ui-1.10.4/development-bundle/demos/datepicker/images/calendar.gif",
				buttonImageOnly: true,
			});
        });
    </script>

{% endblock %}