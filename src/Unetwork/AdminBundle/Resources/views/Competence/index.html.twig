{% extends 'UnetworkAdminBundle::layout.html.twig' %}

{% block body %}

	<h1>Competence</h1>

	



		<table class="table table-striped">
             <thead>
                <tr>
                 	<th> Id </th>
                 	<th> Competence </th>                 		
                 	<th> User</th>     
                 	<th> Date </th>
                 	<th>Suprimer</th>
                </tr>
            </thead> 

            <tbody>

            	{% for competence in competences  %}
            		<tr>
            			<td>{{ competence.id }}</td>
            			<td>{{ competence.name }}</td>
            			<td>{{ competence.cv.user.nom }} {{ competence.cv.user.prenom }}</td>
            			<td>{{ competence.updated|date("m/d/Y h:i") }}</td>

		                <td>		                 		 
		                 	<a href="{{ path('admin_competence_delete',{'id': competence.id } ) }}"> <img src="/Admin/img/delete.png"/> </a> 
		                </td>
            		</tr>      
               	{% endfor %} 
            </tbody>     

{% endblock %}
