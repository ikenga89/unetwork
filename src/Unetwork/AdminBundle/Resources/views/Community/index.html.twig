{% extends 'UnetworkAdminBundle::layout.html.twig' %}

{% block body %}

	<h1>Community</h1>

<div class="table-responsive">
{% include 'UnetworkAdminBundle:UI:popup.html.twig'%}
            <table class="table table-striped">
              <thead>
                <tr>
                 		<th> Id </th>                 		
                 		<th> Name</th>     
                 		<th> Modifier / Supprimer </th>
                 		

                </tr>
              </thead>

              <tbody>

                	{% for community in communities  %}                 		
